{
  "name": "silent-arcana",
  "version": "1.4.28",
  "description": "A web-based sign language learning platform that uses gamification to foster inclusive workplace communication.",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack serve",
    "start": "serve public -l 8080",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "normalize": "node --loader ts-node/esm src/normalizeGestures.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/t-9/silent-arcana.git"
  },
  "keywords": [
    "sign-language",
    "hand-gesture",
    "learning",
    "gamification"
  ],
  "author": "Chikage",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t-9/silent-arcana/issues"
  },
  "homepage": "https://github.com/t-9/silent-arcana#readme",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitest/coverage-v8": "^3.0.4",
    "canvas": "^3.1.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "serve": "^14.2.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "@tensorflow-models/hand-pose-detection": "^2.0.1",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "mime": "^4.0.6"
  }
}
