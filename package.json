{
  "name": "silent-arcana",
  "version": "1.4.16",
  "description": "A web-based sign language learning platform that uses gamification to foster inclusive workplace communication.",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack serve",
    "start": "serve public -l 8080",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "normalize": "node --loader ts-node/esm src/normalizeGestures.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/t-9/silent-arcana.git"
  },
  "keywords": [
    "sign-language",
    "hand-gesture",
    "learning",
    "gamification"
  ],
  "author": "Chikage",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t-9/silent-arcana/issues"
  },
  "homepage": "https://github.com/t-9/silent-arcana#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "serve": "^14.2.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "@tensorflow-models/hand-pose-detection": "^2.0.1",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "mime": "^4.0.6"
  }
}
