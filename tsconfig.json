{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    // strictモードなど型チェック強化
    "strict": true,
    "esModuleInterop": true,
    // ソースマップ
    "sourceMap": true,
    // 出力ディレクトリ
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}