{
  "compilerOptions": {
    // Basic
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    // Strict Type Checks
    "strict": true,
    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Module Resolution
    "moduleResolution": "Node",
    "esModuleInterop": true,
    // Advanced
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}